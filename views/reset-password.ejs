<%- include ("./parts/header.ejs") %> <%- include ("./parts/navbar.ejs") %>
<style>
    .login-form {
  width: 20rem;
  max-width: 90%;
  margin: auto;
  display: block;
}
.form-control {
  margin: 1rem 0;
}

.form-control label,
.form-control input,
.form-control textarea {
  display: block;
  width: 100%;
  margin-bottom: 0.25rem;
}

.form-control input,
.form-control textarea {
  border: 1px solid #a1a1a1;
  font: inherit;
  border-radius: 3px;
  padding: 0.6em 0.8em;
}

.form-control input:focus,
.form-control textarea:focus {
  outline-color: #37474f;
}

.form-control input.invalid,
.form-control textarea.invalid {
  border-color: #db1c1c;
  outline: 0;
}

.form-control.file-picker input {
  border: none;
  padding: 0;
}

</style>
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

  <main>
    <% if (errorMessage) { %>
      <!-- Reminder: Using BEM methodology for class naming https://css-tricks.com/bem-101/ -->
      <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <form class="login-form" action="/reset-password" method="POST">
      <div class="form-control">
        <label for="email">Email</label>
        <input type="email" name="email" id="email">
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button class="btn" type="submit">Reset Password</button>
    </form>
    <br>
    <p class="centered">Instructions for resetting your password will be sent to the email you provide.</p>
  </main>
  <%- include ("./parts/footer.ejs") %>